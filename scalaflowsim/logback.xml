<configuration debug="true"> 
	<appender name="STDOUT" class="ch.qos.logback.core.FileAppender">
		<file>testFile.log</file>
		<append>true</append>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<root level="trace">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
